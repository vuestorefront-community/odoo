{
  "compilerOptions": {
    "outDir": "./lib",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "target": "es5",
    "module": "ES2015",
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "baseUrl": "./",
    "lib": [
      "es6",
      "es7",
      "ES2017",
      "ES2018",
      "ES2019",
      "dom"
    ],
    "strict": false,
    "preserveSymlinks": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}